datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// -------------------------------------------

enum Role {
  USER
  ADMIN
}

model User {
  uid  String @id @default(uuid())
  name String
  role Role   @default(USER)
}

model Category{
  id String @id @default(uuid())
  name String
}

model Lawyer {
  id          String @id @default(uuid())
  description String
  instruction String @db.Text
  seed        String @db.Text
}

